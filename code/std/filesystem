/**
 * Created in The 1th of Februrary, 2021 by Eviatar
 * ------------------------------------------------
 * Many early implementations of C++17 were 
 * defining the filesystem header in an experimental
 * header, this just file just extracts it, rather
 * than having many ifdefs in every file.
 **/

#pragma once

#if __has_include(<filesystem>)
# include <filesystem>
#elif __has_include(<experimental/filesystem>)
# include <experimental/filesystem>
  namespace std { using namespace std::experimental; }
#else
# error "string_view could not be found!"
#endif

namespace fs = std::filesystem;
